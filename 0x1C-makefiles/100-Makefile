CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)

clean:
	-$(RM) *~ $(NAME) $(OBJ)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Check if m.h exists before including it
ifeq ($(wildcard m.h),m.h)
include m.h
endif

