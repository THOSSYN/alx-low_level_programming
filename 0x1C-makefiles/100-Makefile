# Variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
NAME = school
RM = rm -f

# Object files (auto-generated from source files)
OBJ = $(SRC:.c=.o)

# Rules
.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Dependency rule for each .o file
main.o: main.c m.h
	$(CC) $(CFLAGS) -c main.c -o main.o

school.o: school.c m.h
	$(CC) $(CFLAGS) -c school.c -o school.o

clean:
	-$(RM) *~ $(OBJ) $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Check if m.h exists before including it
ifeq ($(wildcard m.h),m.h)
include m.h
endif

