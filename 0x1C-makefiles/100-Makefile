CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): $(SRC) m.h
	$(CC) $(CFLAGS) -c $*.c -o $@

clean: oclean
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean
	-$(RM) $(NAME)

re: fclean all

# Check if m.h exists before including it
ifeq ($(wildcard m.h),m.h)
include m.h
endif

